<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- Primary Blue Theme Colors -->
    <Color x:Key="Primary">#2ab2ed</Color>
    <Color x:Key="PrimaryDark">#90d9f7</Color>
    <Color x:Key="PrimaryHover">#1a9dd6</Color>
    <Color x:Key="PrimaryDarkText">#001826</Color>
    <Color x:Key="Secondary">#001826</Color>
    <Color x:Key="SecondaryLight">#e6f7ff</Color>
    <Color x:Key="SecondaryDarkText">#90d9f7</Color>
    <Color x:Key="Tertiary">#0077be</Color>

    <!-- Base Colors -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="MidnightBlue">#001826</Color>
    <Color x:Key="OffBlack">#000d13</Color>

    <!-- Blue-Tinted Neutral Grays -->
    <Color x:Key="Gray100">#e8f4f8</Color>
    <Color x:Key="Gray200">#d1e9f0</Color>
    <Color x:Key="Gray300">#b3dae5</Color>
    <Color x:Key="Gray400">#7eb8cc</Color>
    <Color x:Key="Gray500">#5a94a8</Color>
    <Color x:Key="Gray600">#2e5c6e</Color>
    <Color x:Key="Gray900">#001826</Color>
    <Color x:Key="Gray950">#000d13</Color>

    <!-- Blue-Tinted Status Colors (WCAG AA Compliant) -->
    <Color x:Key="Success">#14b8a6</Color>
    <Color x:Key="SuccessDark">#5eead4</Color>
    <Color x:Key="Warning">#f59e0b</Color>
    <Color x:Key="WarningDark">#fbbf24</Color>
    <Color x:Key="Danger">#e11d48</Color>
    <Color x:Key="DangerDark">#fb7185</Color>
    <Color x:Key="Info">#2ab2ed</Color>
    <Color x:Key="InfoDark">#7dd3fc</Color>

    <!-- Softer Pastel Variants for Friendly UI (WCAG AA Large Text) -->
    <Color x:Key="PastelWarning">#d4985a</Color>
    <Color x:Key="PastelWarningDark">#e8b583</Color>
    <Color x:Key="PastelDanger">#c75b7b</Color>
    <Color x:Key="PastelDangerDark">#e89bb0</Color>
    <Color x:Key="PastelInfo">#6bb3d4</Color>
    <Color x:Key="PastelInfoDark">#96cde5</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Warning}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource Danger}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource Info}"/>
</ResourceDictionary>